@using TravelTripProject.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumListesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
       
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.ID</td>    
        <td>@x.KullanıcıAdi</td>    
        <td>@x.Mail</td>    
        <td>@x.yorum</td>    
        <td>@x.Blog.Baslik</td>    
        <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">SİL</a></td>    
           
    </tr>
    }
</table>

